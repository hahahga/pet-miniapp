/* 宠物档案管理页样式 */
.container {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.header {
  padding: 20rpx;
  background-color: #42b983;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx;
  background: white;
  position: sticky;
  top: 0;
  z-index: 99;
}

.search-bar input {
  background: #f0f9ff;
  border-radius: 40rpx;
  padding: 15rpx 25rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 宠物列表 */
.pet-list {
  flex: 1;
  padding: 0 20rpx;
}

.pet-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 30rpx;
  object-fit: cover;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.owner {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.status {
  font-size: 26rpx;
  color: #07C160;
  display: block;
}

/* 添加按钮 */
.add-btn {
  margin: 30rpx;
  background: #07C160;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
}