/* 医疗风格消息通知页 */
.container {
  height: 100vh;
  background-color: #f5f5f5;
}

.header {
  padding: 20rpx;
  background-color: #42b983;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

.notification-list {
  height: calc(100vh - 80rpx);
  padding: 20rpx;
}

.notification-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.icon {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 30rpx;
  top: 30rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-left: 80rpx;
  margin-bottom: 10rpx;
}

.content {
  font-size: 28rpx;
  color: #666;
  margin: 15rpx 0 15rpx 80rpx;
  line-height: 1.5;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-left: 80rpx;
}

.status {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  background: #ff4d4f;
  color: white;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}