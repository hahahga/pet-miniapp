/* 页面容器 */
.container {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 顶部标题 */
.header {
  padding: 20rpx;
  background-color: #42b983;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

/* 筛选栏 */
.filter-bar {
  padding: 20rpx;
  background: white;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}

.filter-bar picker {
  background: #f0f9ff;
  border-radius: 40rpx;
  padding: 15rpx 25rpx;
  color: #1890ff;
  font-size: 28rpx;
}

/* 记录列表 */
.record-list {
  flex: 1;
  padding: 0 20rpx;
}

.record-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  position: relative;
}

.record-item text {
  display: block;
  margin-bottom: 15rpx;
  font-size: 28rpx;
}

.date {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.pet {
  color: #666;
}

.type {
  color: #1890ff;
}

.status {
  color: #07C160;
}

/* 操作按钮 */
.update-btn {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #1890ff;
  color: white;
  border-radius: 40rpx;
  font-size: 24rpx;
  padding: 0 25rpx;
  height: 50rpx;
  line-height: 50rpx;
}

/* 添加按钮 */
.add-btn {
  margin: 30rpx;
  background: #07C160;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
}