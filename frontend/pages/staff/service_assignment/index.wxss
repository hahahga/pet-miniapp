/* 医疗风格服务分配页 */
.container {
  height: 100vh;
  background-color: #f5f5f5;
}

.header {
  padding: 20rpx;
  background-color: #42b983;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

/* 筛选栏 */
.filter-bar {
  padding: 20rpx;
  background: white;
  position: sticky;
  top: 0;
  z-index: 99;
}

.filter-bar picker {
  background: #f0f9ff;
  border-radius: 40rpx;
  padding: 15rpx 25rpx;
  color: #1890ff;
  font-size: 28rpx;
  display: inline-block;
}

/* 服务列表 */
.service-list {
  padding: 0 20rpx;
}

.service-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.service-item text {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.pet {
  color: #666;
}

.owner {
  color: #666;
}

.status {
  color: #07C160;
  font-weight: bold;
}

/* 分配按钮 */
.assign-btn {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #1890ff;
  color: white;
  border-radius: 40rpx;
  font-size: 24rpx;
  padding: 0 25rpx;
  height: 50rpx;
  line-height: 50rpx;
}