.container {
  padding: 20rpx;
}

.header {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  margin: 20rpx 0;
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.menu-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.menu-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 15rpx;
}