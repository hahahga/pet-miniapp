.nearby-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.filter-tabs {
  display: flex;
  background: white;
  padding: 20rpx 30rpx;
  overflow-x: scroll;
  white-space: nowrap;
}

.tab-item {
  display: inline-block;
  padding: 15rpx 30rpx;
  margin-right: 20rpx;
  border-radius: 30rpx;
  background: #f5f5f5;
  color: #666;
}

.tab-item.active {
  background: #07C160;
  color: white;
}

.service-list {
  flex: 1;
  padding: 30rpx;
  background: white;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  margin-top: -30rpx;
}

.service-item {
  display: flex;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.service-image {
  width: 200rpx;
  height: 160rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.service-info {
  flex: 1;
}

.service-info .name {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.service-info .distance {
  color: #07C160;
  font-size: 26rpx;
  margin-right: 20rpx;
}

.service-info .address {
  color: #999;
  font-size: 26rpx;
}

.tags {
  margin-top: 15rpx;
}

.tags text {
  display: inline-block;
  background: #f5f5f5;
  color: #666;
  font-size: 24rpx;
  padding: 6rpx 15rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
}