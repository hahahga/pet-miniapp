/* 页面整体样式 */
.discover-page {
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 顶部绿色横条 */
.top-bar {
  height: 6rpx;
  background-color: #07C160;
}

/* 发现栏目标题 */
.section-title {
  font-size: 32rpx;
  color: #333;
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

/* 朋友圈式卡片容器 */
.discover-card {
  background: #fff;
  margin: 20rpx 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

/* 卡片头部（用户信息） */
.card-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  color: #333;
}

.post-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 内容区域 */
.card-content {
  padding: 0 20rpx 20rpx;
}

.content-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 20rpx;
}

/* 图片展示区（九宫格） */
.image-grid {
  display: flex;
  flex-wrap: wrap;
  margin: -5rpx;
}

.image-item {
  width: calc(33.33% - 10rpx);
  height: 0;
  padding-bottom: 33.33%;
  margin: 5rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.image-item image {
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 底部互动栏 */
.card-footer {
  display: flex;
  padding: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.like-btn, .comment-btn {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #666;
}

/* 栏目特定图标 */
.section-icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 15rpx;
}
/* 基础样式 */
page {
  background-color: #f7f7f7;
}

/* 导航栏 */
.navbar {
  height: 88rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

/* 发布按钮 */
.post-btn {
  background: #fff;
  padding: 20rpx;
  margin: 20rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}

.edit-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

/* 动态卡片 */
.moment-card {
  background: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.03);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.name {
  font-size: 28rpx;
  font-weight: bold;
}

.content {
  margin-bottom: 20rpx;
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.image-grid image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
}

.footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.actions image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}