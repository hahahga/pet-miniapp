/* 宠物医疗服务请求页 */
.container {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.header {
  padding: 20rpx;
  background-color: #42b983;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

.service-list {
  flex: 1;
  padding: 20rpx;
  position: relative;
}

.service-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.title {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.status {
  font-size: 28rpx;
  color: #07C160;
  margin-right: 20rpx;
}

.arrow {
  width: 24rpx;
  height: 24rpx;
}

.request-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  background: #1890ff;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
}