.wallet-page {
  padding: 30rpx;
}

.balance-card {
  background: linear-gradient(135deg, #07C160, #05a14e);
  border-radius: 20rpx;
  padding: 40rpx;
  color: white;
  margin-bottom: 40rpx;
}

.balance-card .label {
  font-size: 28rpx;
  display: block;
  margin-bottom: 20rpx;
}

.balance-card .amount {
  font-size: 60rpx;
  font-weight: bold;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.action-btn {
  width: 48%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.action-btn.recharge {
  background: #07C160;
  color: white;
}

.action-btn.withdraw {
  background: white;
  color: #07C160;
  border: 1px solid #07C160;
}

.transaction-list {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.transaction-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.type-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.info {
  flex: 1;
}

.info .title {
  font-size: 30rpx;
  display: block;
  margin-bottom: 8rpx;
}

.info .time {
  color: #999;
  font-size: 24rpx;
}

.amount {
  font-size: 32rpx;
  font-weight: bold;
}

.amount.income {
  color: #07C160;
}

.amount.expense {
  color: #FF4D4F;
}