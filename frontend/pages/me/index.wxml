<!-- pages/profile/index.wxml -->
<view class="container">
  <!-- 顶部渐变背景栏 -->
  <view class="header-bg">
    <view class="header">
      <text class="header-title">我的</text>
    </view>
  </view>
  
  <!-- 用户信息卡片 -->
  <view class="user-card">
    <image class="avatar" src="{{userInfo.avatar || '/assets/default-avatar.png'}}" mode="aspectFill"></image>
    <view class="user-detail">
      <text class="nickname">{{userInfo.nickname || '已登录'}}</text>
      <text class="id">ID: {{userInfo.id || '#12138'}}</text>
      <view class="vip-badge" wx:if="{{userInfo.isVip}}">
        <image src="/assets/icons/vip.png" class="vip-icon"></image>
        <text>VIP会员</text>
      </view>
    </view>
  </view>

  <!-- 功能菜单区 -->
  <scroll-view class="menu-scroll" scroll-y>
    <!-- 统计信息 -->
    <view class="stats-card">
      <view class="stat-item" wx:for="{{statsData}}" wx:key="id">
        <text class="stat-value">{{item.value}}</text>
        <text class="stat-label">{{item.label}}</text>
      </view>
    </view>
    
    <!-- 菜单列表（新增三个功能项） -->
    <view class="menu-section" wx:for="{{menuGroups}}" wx:key="group">
      <view class="section-title">{{item.groupName}}</view>
      <view class="menu-list">
        <view class="menu-item" wx:for="{{item.items}}" wx:key="id" bindtap="navigateToPage" data-id="{{item.id}}">
          <image class="menu-icon" src="{{item.icon}}"></image>
          <text class="menu-title">{{item.title}}</text>
          <view class="menu-right">
            <!-- 新增NEW角标显示 -->
            <text class="badge" wx:if="{{item.badge}}">{{item.badge}}</text>
            <image class="arrow" src="/assets/icons/arrow-right.png"></image>
          </view>
        </view>
      </view>
    </view>
  </scroll-view>
  
  <!-- 底部装饰元素 -->
  <view class="decoration-circle circle-1"></view>
  <view class="decoration-circle circle-2"></view>
</view>
