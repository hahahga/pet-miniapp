/* pages/profile/index.wxss */
.container {
  position: relative;
  min-height: 100vh;
  background: #f7f7f7;
  padding-bottom: 40rpx;
}

/* 顶部渐变背景 */
.header-bg {
  height: 280rpx;
  background: linear-gradient(135deg, #07C160, #05a14e);
}

.header {
  padding-top: 60rpx;
  padding-left: 40rpx;
}

.header-title {
  color: white;
  font-size: 42rpx;
  font-weight: bold;
}

/* 用户信息卡片 */
.user-card {
  margin: -80rpx 30rpx 0;
  padding: 30rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 20rpx rgba(7, 193, 96, 0.1);
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.id {
  color: #999;
  font-size: 26rpx;
}

.vip-badge {
  margin-top: 10rpx;
  background: #fff8e6;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  display: inline-flex;
  align-items: center;
}

.vip-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 6rpx;
}

/* 统计信息 */
.stats-card {
  display: flex;
  justify-content: space-around;
  margin: 40rpx 30rpx;
  padding: 30rpx 0;
  background: white;
  border-radius: 16rpx;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 38rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.stat-label {
  color: #999;
  font-size: 26rpx;
  margin-top: 8rpx;
}

/* 菜单列表 */
.menu-scroll {
  height: calc(100vh - 500rpx);
}

.menu-section {
  margin: 0 30rpx 30rpx;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.section-title {
  padding: 25rpx 30rpx;
  font-size: 30rpx;
  color: #666;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-list {
  padding: 0 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 28rpx 10rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
}

.menu-title {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.menu-right {
  display: flex;
  align-items: center;
}

.badge {
  background: #ff5a5f;
  color: white;
  font-size: 22rpx;
  padding: 2rpx 12rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}

.arrow {
  width: 24rpx;
  height: 24rpx;
}

/* 装饰元素 */
.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(7, 193, 96, 0.1);
  z-index: -1;
}

.circle-1 {
  width: 300rpx;
  height: 300rpx;
  right: -100rpx;
  bottom: 100rpx;
}

.circle-2 {
  width: 200rpx;
  height: 200rpx;
  right: 50rpx;
  bottom: -50rpx;
}