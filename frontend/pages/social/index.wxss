/* 添加基础样式 */
.container {
  padding: 20rpx;
  height: 100vh;
  background: #f5f5f5;
}

.header {
  text-align: center;
  padding: 20rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.feed-list {
  height: calc(100vh - 180rpx);
}

.feed-item {
  background: white;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  padding: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.content-image {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
}

.actions {
  display: flex;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}

.post-btn {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #07C160;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.2);
}